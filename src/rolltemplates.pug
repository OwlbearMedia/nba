.rolltemplates
  rolltemplate.sheet-rolltemplate-nba
    .sheet-template-container
      // - Display a header on the template -
      .sheet-template-header
        | {{#rname}}{{rname}}{{/rname}}
      // - Display the dice roll in the template -
      .sheet-template-body
        | {{#name}}
        .sheet-template-row.sheet-template-name {{name}}
        | {{/name}}
        | {{#weapon}}
        .sheet-template-row.sheet-template-name {{weapon}}
        | {{/weapon}}
        | {{#result}}
        .sheet-template-row Result: {{result}}
        | {{/result}}
        | {{#damage}}
        .sheet-template-row Damage: {{damage}}
        | {{/damage}}
        | {{#points}}
        .sheet-template-row.sheet-template-points Points spent: {{points}}
        | {{/points}}

